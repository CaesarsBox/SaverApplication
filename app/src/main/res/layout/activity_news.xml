<!-- activity_news.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title for News/Promo Tab -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="News / Promo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"/>

        <!-- Promo Notification Status Section -->
        <TextView
            android:id="@+id/promoStatusMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to Settings"
            android:visibility="gone"
            android:paddingBottom="16dp" />

        <!-- Newsletter Subscription Section -->
        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your email"
            android:visibility="gone"
            android:inputType="textEmailAddress"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/subscribeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subscribe to Newsletter"
            android:visibility="gone"
            android:paddingBottom="16dp" />

        <!-- Upcoming Apps Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upcoming Apps"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/upcomingAppsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check out our exciting upcoming apps! Stay tuned for more updates."
            android:textSize="16sp"
            android:paddingBottom="16dp" />

        <!-- App Updates Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App Updates"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/appUpdatesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Explore the latest updates and new features in our apps."
            android:textSize="16sp"
            android:paddingBottom="16dp" />
        <FrameLayout
            android:id="@+id/news_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>
